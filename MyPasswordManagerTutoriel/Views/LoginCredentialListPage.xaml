<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MyPasswordManagerTutoriel.Models"
             x:Class="MyPasswordManagerTutoriel.Views.LoginCredentialListPage">

    <Grid RowDefinitions="*, Auto">
        <CollectionView VerticalOptions="Fill"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:LoginCredential">
                    <Grid ColumnDefinitions="*, auto" Padding="20">
                        <Label Text="{Binding Website}" VerticalTextAlignment="Center" />
                        
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" Text="Ajouter un mote de passe" Clicked="OnItemAdd" />

    </Grid>
    
</ContentPage>
